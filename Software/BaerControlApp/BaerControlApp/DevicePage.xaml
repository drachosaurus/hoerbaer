<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:BaerControlApp"
             x:Class="BaerControlApp.DevicePage"
             x:DataType="local:DeviceViewModel">
    <ScrollView>
        <VerticalStackLayout
            Padding="30,10"
            Spacing="25">
            
            <Label
                Text="Device"
                SemanticProperties.HeadingLevel="Level2" />

            <Label Text="Battery Voltage" />
            <Label Text="{Binding BatteryVoltageDisplay}" />
            
            <Label Text="Battery Percentage" />
            <Label Text="{Binding BatteryPercentageDisplay}" />
            
            <Label Text="{Binding BatteryChargingDisplay}" />

            <Label Text="State" />
            <Label Text="{Binding StateDisplay}" />
            
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>